<h1>Create a new Figure</h1>
<form action="/figures" method="post">
  <label>Name</label>
  <br></br>
  <input type="text" name="figure[name]" id="figure_name">
  <br></br>

  <label>Choose an existing Title</label>
  <br></br>

  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
  <%= title.name %></input>
  <% end %>
  <br></br>

  <label>and/or, create a new Title</label>
  <br></br>

  <label>Title:</label>
  <br></br>

  <input type="text" name="title[name]" id="new_title">
  </input>
  <br></br>

  <label>Choose an existing Landmark</label>
  <br></br>

  <% Landmark.all.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
  <%= landmark.name %></input>
  <% end %>
  <br></br>

  <label>and/or, create a new Landmark</label>
  <br></br>

  <label>Landmark:</label>
  <br></br>

  <input type="text" name="landmark[name]" id="new_landmark">
  </input>
  <br></br>

  <input type="submit" value="Create New Figure">
  </input>
</form>
